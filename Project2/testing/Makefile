# A sample Makefile for building Google Test and using it in user
# tests.  Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# Please tweak the following variable definitions as needed by your
# project, except GTEST_HEADERS, which you can use in your own targets
# but shouldn't modify.

# Points to the root of Google Test, relative to where this file is.
# Remember to tweak this if you move this file.
GTEST_DIR = /usr/src/gtest/

# Where to find user code.
USER_DIR = ../src/

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include

# Flags passed to the C++ compiler.
CXXFLAGS += -g -pthread

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = runTests

# All Google Test headers.  Usually you shouldn't change this
# definition.
GTEST_HEADERS = /usr/include/gtest/*.h \
                /usr/include/gtest/internal/*.h

# House-keeping build targets.

all : $(TESTS)

clean :
	rm -f $(TESTS) gtest.a gtest_main.a *.o

# Builds gtest.a and gtest_main.a.

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc

gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc

gtest.a : gtest-all.o
	$(AR) $(ARFLAGS) $@ $^

gtest_main.a : gtest-all.o gtest_main.o
	$(AR) $(ARFLAGS) $@ $^

# Builds a sample test.  A test should link with either gtest.a or
# gtest_main.a, depending on whether it defines its own main()
# function.

ballot.o : $(USER_DIR)/ballot.cc $(USER_DIR)/ballot.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/ballot.cc

ballot_file_processor.o : $(USER_DIR)/ballot_file_processor.cc $(USER_DIR)/ballot_file_processor.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/ballot_file_processor.cc

candidate.o : $(USER_DIR)/candidate.cc $(USER_DIR)/candidate.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/candidate.cc

logger.o : $(USER_DIR)/logger.cc $(USER_DIR)/logger.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/logger.cc

plurality_election_record.o : $(USER_DIR)/plurality_election_record.cc $(USER_DIR)/plurality_election_record.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/plurality_election_record.cc

plurality_election.o : $(USER_DIR)/plurality_election.cc $(USER_DIR)/plurality_election.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/plurality_election.cc

stv_election_record.o : $(USER_DIR)/stv_election_record.cc $(USER_DIR)/stv_election_record.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/stv_election_record.cc

stv_election.o : $(USER_DIR)/stv_election.cc $(USER_DIR)/stv_election.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/stv_election.cc

voting_info.o : $(USER_DIR)/voting_info.cc $(USER_DIR)/voting_info.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/voting_info.cc

ballot_UT.o : $(USER_DIR)/ballot_UT.cc $(USER_DIR)/ballot.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/ballot_UT.cc

ballot_file_processor_UT.o : $(USER_DIR)/ballot_file_processor_UT.cc $(USER_DIR)/ballot_file_processor.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/ballot_file_processor_UT.cc

candidate_UT.o : $(USER_DIR)/candidate_UT.cc $(USER_DIR)/candidate.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/candidate_UT.cc

logger_UT.o : $(USER_DIR)/logger_UT.cc $(USER_DIR)/logger.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/logger_UT.cc

plurality_election_record_UT.o : $(USER_DIR)/plurality_election_record_UT.cc $(USER_DIR)/plurality_election_record.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/plurality_election_record_UT.cc

plurality_election_UT.o : $(USER_DIR)/plurality_election_UT.cc $(USER_DIR)/plurality_election.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/plurality_election_UT.cc

stv_election_record_UT.o : $(USER_DIR)/stv_election_record_UT.cc $(USER_DIR)/stv_election_record.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/stv_election_record_UT.cc

stv_election_UT.o : $(USER_DIR)/stv_election_UT.cc $(USER_DIR)/stv_election.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/stv_election_UT.cc

voting_info_UT.o : $(USER_DIR)/voting_info_UT.cc $(USER_DIR)/voting_info.h $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/voting_info_UT.cc

runTests : ballot.o ballot_file_processor.o candidate.o logger.o plurality_election_record.o plurality_election.o stv_election_record.o stv_election.o voting_info.o ballot_UT.o ballot_file_processor_UT.o candidate_UT.o logger_UT.o plurality_election_record_UT.o plurality_election_UT.o stv_election_record_UT.o stv_election_UT.o voting_info_UT.o gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@
